<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke"

    tools:context=".SignUpActivity">

    <Button
        android:id="@+id/signupBtn"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="109dp"
        android:background="@drawable/button_background"
        android:text="Sign Up"
        android:textColor="@color/colorWhite"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/editTxtEmail"
        android:layout_width="288dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:ems="10"
        android:hint=" example@email.com"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_email_"
        android:textColorHint="@color/colorGrayLight"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/editTxtPass"
        android:layout_width="288dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="301dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack"
        android:drawableStart="@drawable/ic_lock"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Password"
        android:drawablePadding="10dp"
        android:textColorHint="@color/colorGrayLight"
        tools:ignore="DuplicateIds" />

    <EditText
        android:id="@+id/editTxtId"
        android:layout_height="42dp"
        android:layout_width="288dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:drawablePadding="10dp"
        android:textColorHint="@color/colorGrayLight"
        android:drawableStart="@drawable/ic_identity"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/tViewlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="212dp"
        android:fontFamily="sans-serif"
        android:text="Already Have An Account?"
        android:textColor="@color/colorGrayDark" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="121dp"
        android:fontFamily="sans-serif-black"
        android:text="SMART NOTES"
        android:textColor="@color/colorBlueLight"
        android:textSize="28dp" />

</RelativeLayout>